# This file has been auto-generated by i3-config-wizard(1).
# It will not be overwritten, so edit it as you like.
#

set $m Mod4
set $s Shift
set $e exec --no-startup-id
set $b bindsym

# Window title font
font pango:monospace 8

# Lock screen
$b $m+$s+o $e xlock

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
$e nm-applet

#
# AUDIO
#

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

$b XF86AudioRaiseVolume $e pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
$b XF86AudioLowerVolume $e pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
$b XF86AudioMute $e pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
$b XF86AudioMicMute $e pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#
# DISPLAYS
#

# Set external display as primary
$e xrandr --output HDMI-2 --primary
# Set external display left of laptop
$e xrandr --output HDMI-2 --left-of eDP-1

# Use Mouse+$m to drag floating windows to their wanted position
floating_modifier $m

# start a terminal
$b $m+Return exec terminator

# kill focused window
$b $m+$s+q kill

#
# APP LAUNCHER
#

# Rofi
$b $m+d exec rofi -show drun -theme "flat-orange.rasi"

# change focus
$b $m+h focus left
$b $m+j focus down
$b $m+k focus up
$b $m+l focus right

# alternatively, you can use the cursor keys:
$b $m+Left focus left
$b $m+Down focus down
$b $m+Up focus up
$b $m+Right focus right

# move focused window
$b $m+$s+h move left
$b $m+$s+j move down
$b $m+$s+k move up
$b $m+$s+l move right

# alternatively, you can use the cursor keys:
$b $m+$s+Left move left
$b $m+$s+Down move down
$b $m+$s+Up move up
$b $m+$s+Right move right

# split in horizontal orientation
$b $m+bar split h

# split in vertical orientation
$b $m+minus split v

# enter fullscreen mode for the focused container
$b $m+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
$b $m+s layout stacking
$b $m+t layout tabbed
$b $m+e layout toggle split

# toggle tiling / floating
$b $m+$s+space floating toggle

# change focus between tiling / floating windows
$b $m+space focus mode_toggle

# focus the parent container
$b $m+p focus parent

# focus the child container
$b $m+c focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# switch to workspace
set $wsn workspace number
$b $m+0 $wsn $ws0
$b $m+1 $wsn $ws1
$b $m+2 $wsn $ws2
$b $m+3 $wsn $ws3
$b $m+4 $wsn $ws4
$b $m+5 $wsn $ws5
$b $m+6 $wsn $ws6
$b $m+7 $wsn $ws7
$b $m+8 $wsn $ws8
$b $m+9 $wsn $ws9

# move focused container to workspace
set $mctwsn move container to workspace number
$b $m+$s+0 $mctwsn $ws0
$b $m+$s+1 $mctwsn $ws1
$b $m+$s+2 $mctwsn $ws2
$b $m+$s+3 $mctwsn $ws3
$b $m+$s+4 $mctwsn $ws4
$b $m+$s+5 $mctwsn $ws5
$b $m+$s+6 $mctwsn $ws6
$b $m+$s+7 $mctwsn $ws7
$b $m+$s+8 $mctwsn $ws8
$b $m+$s+9 $mctwsn $ws9

# reload the configuration file
$b $m+$s+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$b $m+$s+r restart
# exit i3 (logs you out of your X session)
$b $m+$s+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        $b h resize shrink width 10 px or 10 ppt
        $b c resize grow height 10 px or 10 ppt
        $b k resize shrink height 10 px or 10 ppt
        $b l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        $b Left resize shrink width 10 px or 10 ppt
        $b Down resize grow height 10 px or 10 ppt
        $b Up resize shrink height 10 px or 10 ppt
        $b Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $m+r
        $b Return mode "default"
        $b Escape mode "default"
        $b $m+r mode "default"
}

$b $m+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}
